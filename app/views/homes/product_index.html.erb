# new.html.erb
<%= form_with model: @product, local: true, method: :post, url: "/product/create"  do |form| %>
  <%= form.file_field :avatars, multiple: true, direct_upload: true %><br>
  <%= form.submit %>
<% end %>
<%= link_to 'download',  rails_blob_path(@products.last.avatars.first.blob, disposition: :attachment) %>
<ul>
  <% @products.last.avatars.each do |file| %>
    <li>
      <% if file.representable? %>
        <%= image_tag file.representation(resize_to_limit: [100, 100]) %>
      <% else %>
        <%= link_to rails_blob_path(file, disposition: "attachment") do %>
          <%= image_tag "download.png", alt: "Download file" %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>
